{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "dist"
  },
  "include": ["index.js", "utils/**/*.js", "types/**/*.js", "presets/**/*.js", "polyfills/**/*.js", "test/**/*.js", "browser-test/mochaESMLoader.js", "browser-test/chaiESMLoader.js"],
  "exclude": ["polyfills/createObjectURL.umd.js"]
}
